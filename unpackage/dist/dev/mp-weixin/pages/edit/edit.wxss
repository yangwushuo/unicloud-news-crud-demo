.edit-news-wrapper {
  box-sizing: border-box;
  height: 100vh;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
}
.edit-news-wrapper .news-info {
  border-radius: 20rpx;
  box-shadow: rgba(255, 255, 255, 0.2) 0px 0px 0px 2px inset, rgba(0, 0, 0, 0.6) 0px 0px 0px 2px;
  margin-bottom: 20rpx;
}
.edit-news-wrapper .news-info .label-class {
  text-align: center;
}
.edit-news-wrapper .news-info .icon {
  width: 42rpx;
  height: auto;
}
.edit-news-wrapper .news-info .icon-news-img {
  width: 42rpx;
  height: 42rpx;
}
.edit-news-wrapper .news-control {
  height: 100rpx;
  display: flex;
  justify-content: center;
}
.edit-news-wrapper .news-control .news-control-but van-button {
  line-height: 100rpx;
  margin: 0rpx 15rpx;
}
.edit-news-wrapper .popUp {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 100rpx;
}
.edit-news-wrapper .popUp text {
  line-height: 100rpx;
}

